import express from "express";
import dotenv from "dotenv";
import cors from "cors";

dotenv.config();
const app = express();
app.use(cors());
app.use(express.json());

// Example products
let products = [
  { id: 1, name: "Smartphone XYZ", price: 30000, description: "Latest smartphone", image: "https://via.placeholder.com/150" },
  { id: 2, name: "Laptop ABC", price: 75000, description: "High performance laptop", image: "https://via.placeholder.com/150" },
  { id: 3, name: "Smartwatch 123", price: 10000, description: "Smart wearable", image: "https://via.placeholder.com/150" },
];

// Routes
app.get("/", (req, res) => {
  res.send("ByteZone backend running...");
});

app.get("/api/products", (req, res) => {
  res.json(products);
});

const PORT = process.env.PORT || 5000;
app.listen(PORT, () => console.log(`Server running on port ${PORT}`));

